{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/login",
      "methods": ["POST"],
      "dest": "/api/index.js"
    },
    {
      "src": "/login",
      "methods": ["GET"],
      "dest": "/index.html"
    },
    {
      "src": "/sitemap.xml",
      "dest": "/sitemap.xml",
      "headers": {
        "Content-Type": "application/xml; charset=utf-8",
        "Cache-Control": "public, max-age=86400"
      }
    },
    {
      "src": "/robots.txt",
      "dest": "/robots.txt",
      "headers": {
        "Content-Type": "text/plain; charset=utf-8",
        "Cache-Control": "public, max-age=86400"
      }
    },
    {
      "src": "/((?!api|assets|sitemap.xml|robots.txt|favicon.*|apple-touch-icon.*|android-chrome.*|mstile.*|og-image.*|site.webmanifest|browserconfig.xml).*)",
      "dest": "/index.html"
    }
  ]
}
